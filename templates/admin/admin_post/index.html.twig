{% extends 'layout/admin-layout.html.twig' %}


{% block body %}


<div class="container mt-5">

    <h2>
        List all posts |
        <a href="{{ path('admin_new_post') }}" type="button" class="btn btn-outline-primary">
            Create a new post
        </a>
    </h2>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">Posts</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for post in postEntities %}
            <tr>
                <td>
                    {{ post.title | capitalize }}
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic outlined example">
                        <a href="{{ path('admin_update_post', {'id': post.id}) }}" type="button" class="btn btn-outline-warning ml-3">Modify</a>
                        <a href="{{ path('admin_delete_post', {'id': post.id}) }}" type="button" class="btn btn-outline-danger">Delete</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


</div>
{% endblock %}
