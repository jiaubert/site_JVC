{% extends 'layout/admin-layout.html.twig' %}

{% block title %}Hello AdminTopicController!{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2>
            See the current list of topic
        </h2>

        {% if deleteMessage is defined %}
            <p>{{ deleteMessage }}</p>
        {% endif %}


        <table class="table">
            <thead>
            <tr>
                <th scope="col">Topic</th>
                <th scope="col">Forum</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for topic in listeTopics %}
                <tr>
                    <td>
                        {{ topic.title | capitalize }}
                    </td>
                    <td>
                        {{ topic.forum.title | capitalize }}
                    </td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic outlined example">
                            <a href="{{ path('admin_update_topic', {'id': topic.id}) }}" type="button" class="btn btn-outline-warning ml-3">Modify</a>
                            <a href="{{ path('admin_delete_topic', {'id': topic.id}) }}" type="button" class="btn btn-outline-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
